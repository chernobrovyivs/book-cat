<Window x:Class="BookCat.Genres"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Genres" Height="300" Width="300">
    <Grid Name="grdMain">
        <Button Height="23" Margin="0,0,93,14" Name="button1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="button1_Click">ОК</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,14" Name="button2" VerticalAlignment="Bottom" Width="75" Click="button2_Click">Отмена</Button>
        <Label Height="28" Margin="22,24,136,0" Name="label1" VerticalAlignment="Top">Название</Label>
        <Label Margin="22,94,136,0" Name="label2" Height="28" VerticalAlignment="Top">Комментарии</Label>
        <TextBox Height="23" Margin="22,47,12,0" Name="textBox1" VerticalAlignment="Top" Text="{Binding Path=Name}"/>
        <TextBox Margin="22,120,12,81" Name="textBox2"  Text="{Binding Path=About}"/>
    </Grid>
</Window>
